FROM node:20-bullseye

# Instalar Chromium (más simple y confiable que Google Chrome)
RUN apt-get update && apt-get install -y \
    chromium \
    chromium-sandbox \
    fonts-ipafont-gothic \
    fonts-wqy-zenhei \
    fonts-thai-tlwg \
    fonts-kacst \
    fonts-freefont-ttf \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*

# Instalar Nest CLI globalmente
RUN npm install -g @nestjs/cli

WORKDIR /usr/src/app

# Configurar Puppeteer para no descargar Chromium antes de instalar
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true

# Copiar package files e instalar dependencias
COPY package*.json ./
RUN npm install

# Configurar Puppeteer para usar Chromium instalado
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true \
    PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# El código se monta como volumen, no se copia
CMD ["npm", "run", "start:dev"]
